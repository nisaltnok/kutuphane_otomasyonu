
@model MVC_kutuphane_otomasyonu_entities.Model.KitapTurleri
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg">
        <div class="ibox">
            <div class="ibox ibox-head">
                Kitap Turu Ekleme Sayfasi 
            </div>

            <div class="ibox-body">
                <form action="Ekle" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Kitap Turu :
                        <input type="text" name="KitapTuru" class=" form-control" />
                        @Html.ValidationMessageFor(x => x.KitapTuru, "", new {@class="text-danger"})
                    </div>
                    <div class="form-group">
                        Aciklama:
                        <textarea name="Aciklama" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-success">

                    </div>
                </form>

            </div>






        </div>
    </div>


</div>

