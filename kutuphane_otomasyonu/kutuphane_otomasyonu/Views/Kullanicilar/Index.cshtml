@model List<MVC_kutuphane_otomasyonu_entities.Model.Kullanicilar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kullanıcı Listesi
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanıcı Adı</th>
                            <th>Adı Soyadı</th>
                            <th>Telefon</th>
                            <th>E-mail</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => item.Id)</td>
                                <td>@Html.DisplayFor(x => item.KullaniciAdi)</td>
                                <td>@Html.DisplayFor(x => item.AdiSoyadi)</td>
                                <td>@Html.DisplayFor(x => item.Telefon)</td>
                                <td>@Html.DisplayFor(x => item.Email)</td>
                                <td>@Html.DisplayFor(x => item.KayitTarihi)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                    @Html.ActionLink("Detay", "Detay", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil", "Kullanicilar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt silinsin mi?')" }) |
                                    @Html.ActionLink("Rolleri", "KRolleri", "Kitaplar", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="form-group">
                    @Html.ActionLink("Yeni Kullanıcı Ekle", "Ekle", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
