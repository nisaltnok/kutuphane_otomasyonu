@model MVC_kutuphane_otomasyonu_entities.Model.ViewModel.KullaniciRolViewModel

@{
    ViewBag.Title = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <h3>Kullanıcı Listesi</h3>
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanıcı Adı</th>
                            <th>Adı Soyadı</th>
                            <th>Roller</th>
                            <th>Telefon</th>
                            <th>E-mail</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kullanici in Model.Kullanicilar)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => kullanici.Id)</td>
                                <td>@Html.DisplayFor(x => kullanici.KullaniciAdi)</td>
                                <td>@Html.DisplayFor(x => kullanici.AdiSoyadi)</td>
                                <td>
                                    <ul class="list-unstyled mb-2">
                                        @foreach (var rol in kullanici.KullaniciRolleri)
                                        {
                                            <li class="mb-2 d-flex justify-content-between align-items-center">
                                                <span>@rol.Roller.Rol</span>
                                                <span>
                                                    @Html.ActionLink("Düzenle", "Duzenle", "KullaniciRolleri", new { id = rol.Id }, new { @class = "btn btn-warning btn-sm me-1" })
                                                    @Html.ActionLink("Sil", "Sil", "KullaniciRolleri", new { id = rol.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt silinsin mi?')" })
                                                </span>
                                            </li>
                                        }
                                    </ul>
                                    @Html.ActionLink("Yeni Rol Ekle", "Ekle", "KullaniciRolleri", new { id = kullanici.Id }, new { @class = "btn btn-success btn-sm mt-2" })
                                </td>
                                <td>@Html.DisplayFor(x => kullanici.Telefon)</td>
                                <td>@Html.DisplayFor(x => kullanici.Email)</td>
                                <td>@Html.DisplayFor(x => kullanici.KayitTarihi)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = kullanici.Id }, new { @class = "btn btn-warning btn-sm me-1" })
                                    @Html.ActionLink("Sil", "Sil", "Kullanicilar", new { id = kullanici.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt silinsin mi?')" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="form-group mt-3">
                    @Html.ActionLink("Yeni Kullanıcı Ekle", "Ekle", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stil ve script -->
<link href="~/style.css" rel="stylesheet" />
<script src="~/JavaScript.js"></script>
