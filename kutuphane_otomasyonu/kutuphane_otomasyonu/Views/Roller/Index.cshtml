@model List<MVC_kutuphane_otomasyonu_entities.Model.Roller>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Roller Listesi
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Rol</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x => item.Id)</td>
                                    <td>@Html.DisplayFor(x => item.Rol)</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Duzenle", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                                        @Html.ActionLink("Sil", "Sil", "Kitaplar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt silinsin mi?')" })
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="3">Kayıt bulunamadı.</td></tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
