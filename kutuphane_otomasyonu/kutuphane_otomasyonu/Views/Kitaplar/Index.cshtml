@model List<MVC_kutuphane_otomasyonu_entities.Model.Kitaplar> /* BURADA HATA OABILIR.*/
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kitap Listesi
            </div>
            <div class=" ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kitap Turu</th>
                            <th>Barkod</th>
                            <th>Kitap Adi</th>
                            <th>Yazari</th>
                            <th>Eklenme Tarihi</th>
                            <th>Silindi Mi</th>
                            <th>Islemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @Html.DisplayFor(x => item.Id)
                                </th>
                                <td> @Html.DisplayFor(x => item.KitapTurleri.KitapTuru)</td>
                                <td> @Html.DisplayFor(x => item.BarkodNo)</td>
                                <td> @Html.DisplayFor(x => item.KitapAdi)</td>
                                <td> @Html.DisplayFor(x => item.YazarAdi)</td>
                                <td> @Html.DisplayFor(x => item.EklenmeTarihi)</td>
                                <td> @Html.CheckBoxFor(x => item.SilindiMi)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Duzenle", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                                    @Html.ActionLink("Detay", "Detay", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil", "Kitaplar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('kayit silinsin mi ?')" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })
                </div>


            </div>

        </div>

    </div>

</div>

