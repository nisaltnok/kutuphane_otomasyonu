@model MVC_kutuphane_otomasyonu_entities.Model.Kitaplar

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>@Html.DisplayFor(x => x.Id) nolu Kitap Bilgileri</b>
            </div>
            <div class="ibox-body">
                <div class="form-group">
                    <b>kitap Turu:</b>
                    @Html.DisplayFor(x => x.KitapTurleri.KitapTuru)
                </div>
                <div class="form-group">
                    <b>Barkod No:</b>
                    @Html.DisplayFor(x => x.BarkodNo)
                </div>
                <div class="form-group">
                    <b>Kitap Adi:</b>
                    @Html.DisplayFor(x => x.KitapAdi)
                </div>
                <div class="form-group">
                    <b>Yazari:</b>
                    @Html.DisplayFor(x => x.YazarAdi)
                </div>
                <div class="form-group">
                    <b>Yayin Evi:</b>
                    @Html.DisplayFor(x => x.YayinEvi)
                </div>
                <div class="form-group">
                    <b>Stok:</b>
                    @Html.DisplayFor(x => x.StokAdedi)
                </div>
                <div class="form-group">
                    <b>Sayfa Sayisi:</b>
                    @Html.DisplayFor(x => x.SayfaSayisi)
                </div>
                <div class="form-group">
                    <b>Aciklama:</b>
                    @Html.DisplayFor(x => x.Aciklama)
                </div>
                <div class="form-group">
                    <b>Eklenme Tarihi:</b>
                    @Html.DisplayFor(x => x.EklenmeTarihi)
                </div>
                <div class="form-group">
                    <b>Guncellenme Tarihi:</b>
                    @Html.DisplayFor(x => x.GuncellenmeTarihi)
                </div>
                <div class="form-group">
                    <b>Silindi Mi:</b>
                    @Html.CheckBoxFor(x => x.SilindiMi)
                </div>
                <div class="form-group">
                    @Html.ActionLink("Kitap Listesi", "Index",null, new {@class="btn btn-info"})
                </div>
            </div>

        </div>

    </div>

</div>



