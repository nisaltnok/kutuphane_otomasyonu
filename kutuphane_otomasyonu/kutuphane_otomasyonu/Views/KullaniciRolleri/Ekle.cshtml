@model MVC_kutuphane_otomasyonu_entities.Model.KullaniciRolleri

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg">
        <div class="ibox">
            <div class="ibox ibox-head">
                <b>@ViewBag.kullaniciAdi Icin Rol Ekleme Islemi</b>
            </div>

            <div class="ibox-body">
                @using (Html.BeginForm("Ekle", "Kitaplar", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.KullaniciId)
                        @Html.TextBoxFor(x => x.KullaniciId, new { @class = "form-control",Value=ViewBag.kullaniciId })
                        @Html.ValidationMessageFor(x => x.KullaniciId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.RolId)
                        @Html.DropDownListFor(x => x.RolId, (SelectList)ViewBag.Liste, "-Secim Yapiniz-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RolId, "", new { @class = "text-danger" })
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Ekle</button>

                    </div>

                }

            </div>
        </div>
    </div>
</div>

