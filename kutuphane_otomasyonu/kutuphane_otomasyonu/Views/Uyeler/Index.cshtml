@model List<MVC_kutuphane_otomasyonu_entities.Model.Uyeler> /* BURADA HATA OABILIR.*/
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
               Uyeler
            </div>
            <div class=" ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Adi Soyadi</th>
                            <th>Telefon</th>
                            <th>Adresi</th>
                            <th>E-mail</th>
                            <th>Resim</th>
                            <th>Islemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @Html.DisplayFor(x => item.Id)
                                </th>
                                <td> @Html.DisplayFor(x => item.AdiSoyadi)</td>
                                <td> @Html.DisplayFor(x => item.Telefon)</td>
                                <td> @Html.DisplayFor(x => item.Adres)</td>
                                <td> @Html.DisplayFor(x => item.Email)</td>
                                <td> <img src="@item.ResimYolu" width="100" height="100" /></td>
                                <td>
                                    @Html.ActionLink("Edit", "Duzenle", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                                    @Html.ActionLink("Sil", "Sil", new { id = item.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('kayit silinsin mi ?')" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })
                </div>


            </div>

        </div>

    </div>

</div>

